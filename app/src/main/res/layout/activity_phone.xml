<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@drawable/back"
                                             tools:context=".activities.PhoneActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"

            android:elevation="4dp"
            app:contentInsetStart="0dp"
            tools:ignore="MissingConstraints">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:text="Клуб дзюдо Юность"
                      android:textColor="@color/black"
                      android:textAlignment="center"
                      android:textSize="19sp"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      tools:layout_editor_absoluteX="91dp" app:layout_constraintVertical_bias="0.0"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.Toolbar>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/budakov_andrey_pavlovich_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/budakov_andrey_pavlovich_name"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/budakov_andrey_pavlovich"
            android:layout_marginLeft="15dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/gray"

    />
    <TextView
            android:id="@+id/budakov_andrey_pavlovich_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Будаков Андрей Павлович"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textStyle="bold" tools:layout_editor_absoluteY="35dp"/>
    <TextView
            android:id="@+id/budakov_andrey_pavlovich_text"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:text="Мастер спорта СССР по дзюдо. Под его руководством более 300 подопечных. Главный тренер секции Юность"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/budakov_andrey_pavlovich_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/budakov_andrey_pavlovich_name"

            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/phone_ap_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контактный номер телефона"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/budakov_andrey_pavlovich_image"

            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/phone_ap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="89128015072"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_ap_text"

            android:textColor="@color/black"
            android:textStyle="bold"/>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/aa_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@+id/aa_name"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/buda"
            android:layout_marginLeft="15dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/gray"

    />
    <TextView
            android:id="@+id/aa_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Будаков Александр Андреевич"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_ap"
            android:fontFamily="sans-serif"
            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/aa_text"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:text="Мастер спорта России по дзюдо. Кандидат в мастера спорта по самбо. Тренер секции Юность по дзюдо и самбо"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/aa_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aa_name"

            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/phone_aa_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Контактный номер телефона"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aa_image"

            android:textColor="@color/black"
            android:textStyle="bold"/>
    <TextView
            android:id="@+id/phone_aa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="89128020485"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phone_aa_text"

            android:textColor="@color/black"
            android:textStyle="bold"/>
    <Button android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:id="@+id/edit_profile_btn"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/phone_aa"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Изменение профиля"
            android:textAllCaps="false"
            app:layout_constraintHorizontal_weight="5"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <include layout="@layout/bottom_navigation_view"></include>
</android.support.constraint.ConstraintLayout>